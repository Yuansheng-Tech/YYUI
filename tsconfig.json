{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove",
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "incremental": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@ysyp/ui/*": ["../../packages/components/*"],
      "@ysyp/utils/*": ["../../packages/utils/*"],
      "@ysyp/stores/*": ["../../packages/stores/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
